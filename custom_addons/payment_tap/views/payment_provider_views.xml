<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form_tap" model="ir.ui.view">
        <field name="name">Tap Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group name="tap_credentials" invisible="code != 'tap'">

                    <field name="tap_publishable_key"
                        invisible = "tap_payment_flow_type == 'redirect'"
                        required="code == 'tap' and state != 'disabled' and tap_payment_flow_type == 'direct'"/>

                    <field name="tap_secret_key" string="Secret Key" password="True"
                        required="code == 'tap' and state != 'disabled' "/>
                   
                    <!-- <button class="btn btn-primary" type="object" name="test_connection_payment_tap" string="Test Connection" invisible="state=='disabled'"/> -->
                </group>
            </group>

            <group name="provider_config" position="inside">
                <group name="tap_config" string="Tap Configuration">
                    <field name="tap_payment_flow_type" widget="radio"/>
                    <field name="tap_3ds_verification" />
                </group>
            </group>
        </field>
    </record>

</odoo>
