<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form_hyperpay" model="ir.ui.view">
        <field name="name">Hyperpay Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group name="hyperpay_credentials"
                       invisible="code != 'hyperpay'">
                    <field name="hyperpay_merchant_id"
                           string="Merchant Id"
                           required="code == 'hyperpay' and state != 'disabled'"/>
                    <field name="hyperpay_authorization"
                           string="Authorization"
                           required="code == 'hyperpay' and state != 'disabled'"
                           />
                </group>
            </group>
        </field>
    </record>

</odoo>
