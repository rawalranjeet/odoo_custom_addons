<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="magento_instance_view_form" model="ir.ui.view">
        <field name="name">magento.instance.view.form</field>
        <field name="model">magento.instance</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button string="Test Connection" type="object" name = "action_test_connection" class="btn btn-primary"/>
                </header>
                <group name="credentials">
                    <field name="name" />
                    <field name="magento_access_token"/>
                    <field name="magento_store_base_url"/>
                </group>
               
            </form>
           
        </field>
    </record>

    <record id="magento_instance_view_list" model="ir.ui.view">
        <field name="name">magento.instance.view.list</field>
        <field name="model">magento.instance</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="magento_instance_view_action" model="ir.actions.act_window">
        <field name="name">Magento Instance</field>
        <field name="res_model">magento.instance</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_magento_root"
        name="Magento Connector"
        sequence="10"
        />

    <menuitem
        id="menu_magento_instance"
        name="Magento Instance"
        action="magento_instance_view_action"
        parent="menu_magento_root"
        sequence="1"
        />


</odoo>
