<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="magento_orders_view_action" model="ir.actions.act_window">
        <field name="name">Magento Orders</field>
        <field name="res_model">sale.order</field>
        <field name="domain">[('magento_order_id','!=',False)]</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_magento_orders"
        name="Magento Orders"
        parent="menu_magento_root"
        sequence="5"
        />

    <menuitem
        id="menu_magento_orders_list"
        name="Orders"
        action="magento_orders_view_action"
        parent="menu_magento_orders"
        sequence="1"
        />

</odoo>
