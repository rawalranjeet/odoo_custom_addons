<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_provider_tap" model="payment.provider">
        <field name="name">Tap</field>
        <field name="code">tap</field>
        <field name="state">disabled</field>
        <field name="redirect_form_view_id" ref="redirect_form"/>
        <field name="inline_form_view_id" ref="inline_form"/>
        <field name="image_128" type="base64" file="ct_payment_tap/static/description/icon.png"/>
        <field name="module_id" ref="base.module_ct_payment_tap"/>
         <field name="allow_tokenization">True</field>
        <field name="payment_method_ids"
               eval="[Command.set([
                        ref('ct_payment_tap.payment_method_tap_direct'),
                        ref('ct_payment_tap.payment_method_tap_redirect'),
                     ])]"
        />
    </record>

    
