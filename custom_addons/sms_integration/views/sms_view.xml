<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="customsms_sms_view_form" model="ir.ui.view">
        <field name="name">customsms.sms.view.form</field>
        <field name="model">customsms.sms</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button class="btn btn-primary" type="object" name="send_sms" invisible = "state not in ['draft']">Send</button>
                    <button class="btn" type="object" name="button_draft" invisible = "state in ['draft']">Set to Draft</button>
                    <field name="state" widget="statusbar"/> 
                    
                </header>
                <div class="alert alert-success" invisible="state !='delivered'">Your Message has been Successfully Delivered</div>
                <div class="alert alert-danger" invisible="state !='failed'">Your Message has been Failed to Deliver!</div>
                <sheet>
                    <group>
                        <field name="contact" readonly="not state == 'draft'"/>
                        <field name="number" readonly="not state == 'draft'" string="To"/>
                        <field name="message" readonly="not state == 'draft'"/>
                    </group>
                </sheet>
                 <chatter/>
            </form>
           
        </field>
    </record>

    <record id="customsms_sms_view_list" model="ir.ui.view">
        <field name="name">customsms.sms.view.list</field>
        <field name="model">customsms.sms</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="contact" />
                <field name="number" />
                <field name="message" />
            </list>
        </field>
    </record>

    <record id="customsms_sms_view_action" model="ir.actions.act_window">
        <field name="name">SMS</field>
        <field name="res_model">customsms.sms</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_customsms_root"
        name="Custom SMS"
        sequence="10"
        />

    <menuitem
        id="menu_customsms"
        name="SMS"
        action="customsms_sms_view_action"
        parent="menu_customsms_root"
        sequence="1"
        />


    <record id="res_partner_view_search1" model="ir.ui.view">
        <field name="name">res.partner.search.inherit1</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="customer_number" />
            </search>
            <xpath expr="//filter[@name='inactive']" position="before">
                <filter name="customer_number" string="Customer Number" domain="[('customer_number', '!=', False)]"/>
                <separator/>
            </xpath>

            <xpath expr="//filter[@name='salesperson']" position="before">
                <filter string="Hello" name="helloo" domain="[]" context="{'group_by' : 'category_id'}"/>
            </xpath>
        </field>
    </record>


    <record id="res_partner_form_view_inherit_new" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.view.new</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="before">
                <field name="customer_number" />
            </xpath>
        </field>
    </record>

   



</odoo>
