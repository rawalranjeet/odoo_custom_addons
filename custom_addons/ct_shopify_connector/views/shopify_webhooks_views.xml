<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shopify_webhooks_view_form" model="ir.ui.view">
        <field name="name">shopify.webhooks.view.form</field>
        <field name="model">shopify.webhooks</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button string="Create Webhook" type="object" name = "action_create_webhook" class="btn btn-primary" invisible = "shopify_webhook_id"/>
                    <button string="Delete Webhook" type="object" name = "action_delete_webhook" class="btn btn-danger" invisible = "not shopify_webhook_id"/>
                </header>
                <group>
                    <field name="name" />
                    <field name="store_id" readonly="shopify_webhook_id"/>
                    <!-- <field name="address" readonly="shopify_webhook_id"/> -->
                    <field name="topic" readonly="shopify_webhook_id"/>
                    <field name="shopify_webhook_id" readonly="True"/>
                </group>
               
            </form>
           
        </field>
    </record>

    <record id="shopify_webhooks_view_list" model="ir.ui.view">
        <field name="name">shopify.webhooks.view.list</field>
        <field name="model">shopify.webhooks</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="shopify_webhooks_view_action" model="ir.actions.act_window">
        <field name="name">Shopify Webhooks</field>
        <field name="res_model">shopify.webhooks</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_shopify_webhooks"
        name="Shopify Webhooks"
        action="shopify_webhooks_view_action"
        parent="menu_shopify_root"
        sequence="2"
        />


</odoo>
