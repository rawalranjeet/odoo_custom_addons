<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shopify_products_view_form" model="ir.ui.view">
        <field name="name">shopify.products.view.form</field>
        <field name="model">shopify.products</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <field name="name" />
                    <field name="price" />
                    <field name="description" />
                </group>
               
            </form>
           
        </field>
    </record>

    <record id="shopify_products_view_list" model="ir.ui.view">
        <field name="name">shopify.products.view.list</field>
        <field name="model">shopify.products</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="shopify_products_view_action" model="ir.actions.act_window">
        <field name="name">Shopify Products</field>
        <field name="res_model">shopify.products</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_shopify_products"
        name="Shopify Products"
        action="shopify_products_view_action"
        parent="menu_shopify_root"
        sequence="3"
        />


</odoo>
