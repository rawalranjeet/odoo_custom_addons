<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shopify_store_view_form" model="ir.ui.view">
        <field name="name">shopify.store.view.form</field>
        <field name="model">shopify.store</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button string="Connect" type="object" name = "action_test_connection" class="btn btn-primary" invisible="state == 'connected'"/>
                    <button string="Disconnect" type="object" name = "action_disconnect" class="btn btn-danger" invisible="state!='connected'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <group name="credentials">
                     <field name="name" />
                    <field name="shopify_store_name" readonly="state!='draft'"/>
                    <field name="shopify_access_token" readonly="state!='draft'"/>
                    <field name="currency_id" readonly="True"/>
                </group>
               
            </form>
           
        </field>
    </record>

    <record id="shopify_store_view_list" model="ir.ui.view">
        <field name="name">shopify.store.view.list</field>
        <field name="model">shopify.store</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="shopify_store_view_action" model="ir.actions.act_window">
        <field name="name">Shopify Store</field>
        <field name="res_model">shopify.store</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_shopify_root"
        name="Shopify Connector"
        sequence="10"
        />

    <menuitem
        id="menu_shopify_store"
        name="Shopify Store"
        action="shopify_store_view_action"
        parent="menu_shopify_root"
        sequence="1"
        />


</odoo>
