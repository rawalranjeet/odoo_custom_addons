<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shopify_products_view_action" model="ir.actions.act_window">
        <field name="name">Shopify Products</field>
        <field name="res_model">product.template</field>
        <field name="domain">[('shopify_product_id','!=',False)]</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <record id="shopify_products_variant_view_action" model="ir.actions.act_window">
        <field name="name">Shopify Products Variant</field>
        <field name="res_model">product.product</field>
        <field name="domain">[('shopify_product_variant_id','!=',False)]</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

