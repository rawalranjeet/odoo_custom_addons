<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shopify_customers_wizard_view_form" model="ir.ui.view">
        <field name="name">shopify.customers.wizard.view.form</field>
        <field name="model">shopify.customers.wizard</field>
        <field name="arch" type="xml">
            <form string="">
               <group >
                    <field name="shopify_store_id" />
               </group>
               <footer>
                    <button string = "Confirm" name="action_get_customers" type="object" class="btn btn-primary"/>
               </footer>
            </form>
        </field>
    </record>

    <record id="shopify_customers_sync_wizard_action" model="ir.actions.act_window">
        <field name="name">Sync Customer</field>
        <field name="res_model">shopify.customers.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_shopify_customers_wizard"
        name="Get Shopify Customers"
        action="shopify_customers_sync_wizard_action"
        parent="menu_shopify_customers"
        sequence="2"
        />

</odoo>
