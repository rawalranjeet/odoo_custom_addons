<odoo>

    <record id="product_template_view_form_inherit" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='volume']" position="after">
               <field name="length" />
               <field name="width" />
               <field name="height" />
            </xpath>

            <xpath expr="//notebook/page[@name='inventory']/group" position="inside">
               <group name="carton_information" string="Carton Information">
                    <field name="carton_length" />
                    <field name="carton_width" />
                    <field name="carton_height" />
                    <field name="carton_inner_quantity" />
                    <field name="carton_quantity" />
                    <field name="carton_volume" />
               </group>
            </xpath>

