<odoo>
  <record id="view_provider_form_inherit_eft_qr" model="ir.ui.view">
    <field name="name">payment.provider.form.eft_qr</field>
    <field name="model">payment.provider</field>
    <field name="inherit_id" ref="payment.payment_provider_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='configuration']" position="before">
       <page name="credentials" string="Credentials">
         <group>
            <field name="User_confirm_Key"/>
            <field name="Secret_code"/>
         </group>
       </page>
      </xpath>
    </field>
  </record>
</odoo>
