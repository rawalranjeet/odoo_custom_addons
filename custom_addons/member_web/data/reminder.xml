<odoo>
    <record id="email_template_membership_expiry" model="mail.template">
        <field name="name">Membership Expiry Reminder</field>
        <field name="model_id" ref="model_membership_membership"/>
        <field name="subject">Your Membership is About to Expire</field>
        <field name="body_html"><![CDATA[
            <p>Dear <t t-esc="object.member_id.name"/>!</p>
            <p>Your membership will expire on <t t-esc="format_date(object.expiry_date)"/>.</p>
            <p>Email: <t t-esc="object.member_id.email"/></p>
            <p>Please renew it to continue enjoying our services.</p>
        ]]></field>

    </record>
</odoo>
