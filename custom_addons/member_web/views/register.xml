<odoo>
	<template id="member_template" name="Member Registration Page">
		<t t-call="website.layout">
			<div class="container mt-5 mb-5">
				<h2 class="text-center">Member Registration</h2>
				<form action="/member/submit" method="post" enctype="multipart/form-data" class="mt-4">
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
					<div class="form-group">
						<label>Name</label>
						<input type="text" name="name" required="required" class="form-control"/>
					</div>
					<div class="form-group">
						<label>Height</label>
						<input type="number" step="any" name="height" class="form-control"/>
					</div>
					<div class="form-group">
						<label>Weight</label>
						<input type="number" step="any" name="weight" class="form-control"/>
					</div>
					<div class="form-group">
						<label>Date of Birth</label>
						<input type="date" name="dob" class="form-control"/>
					</div>
					<div class="form-group">
						<label>Email</label>
						<input type="email" name="email" class="form-control"/>
					</div>
					<div class="form-group">
						<label>Medical Info</label>
						<textarea name="medical_info" class="form-control"></textarea>
					</div>
					<div class="form-group">
						<label>Upload Document</label>
						<input type="file" name="member_document" class="form-control"/>
					</div>
					<button type="submit" class="btn btn-primary mt-3">Submit</button>
				</form>
			</div>
		</t>
	</template>
	<template id="website_member_thanks" name="Thank You">
		<t t-call="website.layout">
			<div class="container mt-5 mb-5 text-center">
				<h2 class="text-success">
					<i class="fa fa-check-circle" style="font-size: 100px;"></i>
					<br/>
                    Thanks for registering!
                
				</h2>
				<p class="mt-3">Your form has been submitted successfully.</p>
				<a href="/member/register" class="btn btn-primary mt-3">Back to Home</a>
			</div>
		</t>
	</template>
	<template id="template_member_list" name="Website Member List">
		<t t-call="website.layout">
			<div class="container mt-5">
				<h2>Members</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Name</th>
							<th>Height</th>
							<th>Weight</th>
							<th>DOB</th>
						</tr>
					</thead>
					<tbody>
						<t t-foreach="members" t-as="m">
							<tr>
								<td>
									<t t-esc="m.name"/>
								</td>
								<td>
									<t t-esc="m.height"/>
								</td>
								<td>
									<t t-esc="m.weight"/>
								</td>
								<td>
									<t t-esc="m.dob"/>
								</td>
							</tr>
						</t>
					</tbody>
				</table>
			</div>
		</t>
	</template>
	<template id="template_membership_list" name="Website Membership List">
		<t t-call="website.layout">
			<div class="container mt-5">
				<h2>Memberships</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Reference</th>
							<th>Member</th>
							<th>Product</th>
							<th>Fees</th>
							<th>Status</th>
						</tr>
					</thead>
					<tbody>
						<t t-foreach="memberships" t-as="ms">
							<tr>
								<td>
									<t t-esc="ms.name"/>
								</td>
								<td>
									<t t-esc="ms.member_id.name"/>
								</td>
								<td>
									<t t-esc="ms.product_id.name"/>
								</td>
								<td>
									<t t-esc="ms.membership_fees"/>
								</td>
								<td>
									<t t-esc="ms.state"/>
								</td>
							</tr>
						</t>
					</tbody>
				</table>
			</div>
		</t>
	</template>
</odoo>
